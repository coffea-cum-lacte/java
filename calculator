import java.util.Scanner;

public class calculator {
    public static void main(String[] args) {
        System.out.println("Write two numbers to do a numerical operation.");
        Scanner sc = new Scanner(System.in);

        System.out.print("First number: ");
        int number1 = Integer.parseInt(sc.nextLine());
        System.out.print("Second number: ");
        int number2 = Integer.parseInt(sc.nextLine());

        int oper = 0;

        while (oper < 1 || oper > 4) {
            System.out.print("Enter 1 to add. 2 to subtract. 3 to multiplier. And 4 to division: ");
            oper = Integer.parseInt(sc.nextLine());

            if (oper < 1 || oper >4) {
                System.out.println("Invalid option. Please choose a number between 1 and 4.");
            }
        }

        double result = 0;

        switch (oper) {
            case 1:
                result = number1 + number2;
                break;
            case 2:
                result = number1 - number2;
                break;
            case 3:
                result = number1 * number2;
                break;
            case 4:
                if (number2 == 0) {
                    System.out.println("Cannot divide by zero!");
                    sc.close();
                    return;
                }
                result = number1 / number2;
                break;
            default:
                System.out.println("Invalid operation.");
                sc.close();
                return;
        }

        if (oper == 1) {
            System.out.println("You chose to add.");
        } else if (oper == 2) {
            System.out.println("You chose to subtract.");
        } else if (oper == 3) {
            System.out.println("You chose to multiply.");
        } else if (oper == 4) {
            System.out.println("You chose to divide.");
        }

        System.out.println("The result is: " + result);
        sc.close();
    }
}
