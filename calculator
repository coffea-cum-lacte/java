import java.util.Scanner;

public class calculator {
    public static void main(String[] args) {
        System.out.println("Write two numbers to do a numerical operation.");
        Scanner sc = new Scanner(System.in);

        System.out.print("Write a number: ");
        int number1 = Integer.parseInt(sc.nextLine());
        System.out.print("Write another number: ");
        int number2 = Integer.parseInt(sc.nextLine());

        System.out.print("Enter 1 to add. 2 to subtract. 3 to multiplier. And 4 to division: ");
        int oper = Integer.parseInt(sc.nextLine());

        int result = 0;

        switch (oper) {
            case 1:
                result = number1 + number2;
                break;
            case 2:
                result = number1 - number2;
                break;
            case 3:
                result = number1 * number2;
                break;
            case 4:
                if (number2 == 0) {
                    System.out.println("Cannot divide by zero!");
                    sc.close();
                    return;
                }
                result = number1 / number2;
                break;
            default:
                System.out.println("Invalid operation.");
                sc.close();
                return;
        }

        System.out.println("The result is: " + result);
        sc.close();
    }
}
